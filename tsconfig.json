{
    "compilerOptions": {
        "declaration": false,
        "noResolve": false,
        "jsx": "react",
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "allowJs": true,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "lib": [
          "es2015"
        ]
    },

    "include": [
        "./src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}
